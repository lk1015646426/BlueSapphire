<Page
    x:Class="BlueSapphire.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueSapphire"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="40">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25">

            <StackPanel HorizontalAlignment="Center" Spacing="5">
                <TextBlock Text="蓝宝石工具箱" 
                           FontSize="48" 
                           FontWeight="SemiBold" 
                           Foreground="White"/>

                <TextBlock Text="Blue Sapphire" 
                           FontSize="20" 
                           FontWeight="Light" 
                           Foreground="#00FFFF" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Version v0.3 Alpha (Neural Link Upgrade)" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <Rectangle Height="1" Width="300" Fill="#20FFFFFF" Margin="0,15"/>

            <StackPanel Width="350" Spacing="10">
                <TextBlock Text=":: CORE SPECIFICATIONS ::" FontSize="16" FontWeight="Bold" Foreground="#00FFFF" Margin="0,0,0,10"/>

                <TextBlock FontWeight="SemiBold" Foreground="White">核心理念:</TextBlock>
                <TextBlock Text="宿主(Host) + 插件(Plugin) 架构" Margin="0,0,0,5" Foreground="Gray" FontSize="14"/>

                <TextBlock FontWeight="SemiBold" Foreground="White">图形引擎:</TextBlock>
                <TextBlock Text="Win2D (高性能粒子渲染)" Margin="0,0,0,5" Foreground="Gray" FontSize="14"/>

                <TextBlock FontWeight="SemiBold" Foreground="White">UI 框架:</TextBlock>
                <TextBlock Text="WinUI 3 (Windows App SDK) / Fluent Design" Margin="0,0,0,5" Foreground="Gray" FontSize="14"/>

                <TextBlock FontWeight="SemiBold" Foreground="White">兼容环境:</TextBlock>
                <TextBlock Text="Visual Studio 2026 / .NET 10" Margin="0,0,0,5" Foreground="Gray" FontSize="14"/>
            </StackPanel>

            <TextBlock Text="© 2025-2026 BlueSapphire Project. All Rights Reserved." 
                       FontSize="10" 
                       Foreground="#30FFFFFF" 
                       Margin="0,30,0,0" 
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Page>
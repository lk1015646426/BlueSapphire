<Page
    x:Class="BlueSapphire.MediaManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueSapphire"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20" Padding="20,15" CornerRadius="8"
              Background="#05FFFFFF" BorderBrush="#15FFFFFF" BorderThickness="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="MEDIA MANAGER" FontSize="12" Opacity="0.5" CharacterSpacing="100" Foreground="#A0FFFFFF"/>
                <TextBlock Text="媒体管家" FontSize="20" FontWeight="Bold" Foreground="White"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <DropDownButton x:Name="SortFieldButton"
                                Content="按名称" 
                                CornerRadius="4"
                                VerticalAlignment="Center"
                                ToolTipService.ToolTip="选择排序字段">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="按名称" Tag="Name" Click="OnSortFieldMenuItemClicked"/>
                            <MenuFlyoutItem Text="按日期" Tag="Date" Click="OnSortFieldMenuItemClicked"/>
                            <MenuFlyoutItem Text="按大小" Tag="Size" Click="OnSortFieldMenuItemClicked"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <ToggleButton x:Name="SortDirectionToggle" Click="OnSortDirectionChanged" 
                              CornerRadius="4"
                              VerticalAlignment="Center" Padding="10,6" 
                              ToolTipService.ToolTip="切换升序/降序">
                    <FontIcon x:Name="SortDirectionIcon" Glyph="&#xE74B;" FontSize="12"/>
                </ToggleButton>

                <AppBarSeparator Foreground="#30FFFFFF" Margin="5,0"/>

                <Button Click="OnScanDuplicatesClicked" 
                        Background="#20FFD700" BorderBrush="#40FFD700" BorderThickness="1"
                        Padding="12,8" CornerRadius="4"
                        ToolTipService.ToolTip="扫描重复文件">
                    <SymbolIcon Symbol="Filter" Foreground="#FFD700"/>
                </Button>

                <Button Click="OnDeleteClicked" 
                        Background="#20FF0000" BorderBrush="#40FF0000" BorderThickness="1"
                        Padding="12,8" CornerRadius="4"
                        ToolTipService.ToolTip="删除选中项">
                    <SymbolIcon Symbol="Delete" Foreground="#FF4444"/>
                </Button>

                <Button Click="OnOpenFolderClicked" 
                        Background="#1000FFFF" BorderBrush="#3000FFFF" BorderThickness="1"
                        Padding="15,8" CornerRadius="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Folder" Foreground="#00FFFF"/>
                        <TextBlock Text="导入数据源" Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GridView x:Name="ImageGrid" 
                      ItemsSource="{x:Bind Images, Mode=OneWay}"
                      ContainerContentChanging="ImageGrid_ContainerContentChanging"
                      Padding="20,0,20,20"
                      SelectionMode="Multiple"
                      DoubleTapped="ImageGrid_DoubleTapped" 
                      IsDoubleTapEnabled="True">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:ImageItem">
                        <Grid Width="180" Height="230" Margin="6" 
                              Background="#08FFFFFF" 
                              CornerRadius="6" 
                              BorderBrush="#15FFFFFF" 
                              BorderThickness="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Image Grid.Row="0" 
                                   Source="{x:Bind ImageSource, Mode=OneWay}" 
                                   Stretch="UniformToFill" 
                                   Margin="6"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Grid Grid.Row="1" Background="#80000000" Padding="8" CornerRadius="0,0,6,6">
                                <StackPanel>
                                    <TextBlock Text="{x:Bind FileName}" 
                                               Foreground="#CCFFFFFF" FontSize="12" 
                                               TextTrimming="CharacterEllipsis" 
                                               HorizontalAlignment="Center"
                                               ToolTipService.ToolTip="{x:Bind FileName}"/>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" Margin="0,2,0,0">
                                        <TextBlock Text="{x:Bind DateCreatedString}" 
                                                   Foreground="#80FFFFFF" FontSize="10"/>
                                        <TextBlock Text="|" Foreground="#40FFFFFF" FontSize="10"/>
                                        <TextBlock Text="{x:Bind FileSizeString}" 
                                                   Foreground="#00FFFF" FontSize="10" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Target="Grid.BorderBrush" Value="#00FFFF"/>
                                            <Setter Target="Grid.BorderThickness" Value="2"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Normal"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <StackPanel x:Name="EmptyStatePanel" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Spacing="20" Opacity="0.4"
                        Visibility="Visible">
                <Viewbox Width="120" Height="120">
                    <SymbolIcon Symbol="Pictures" Foreground="#40FFFFFF"/>
                </Viewbox>
                <TextBlock Text="等待接入媒体库..." FontSize="18" HorizontalAlignment="Center" Foreground="#80FFFFFF"/>
                <TextBlock Text="点击右上角按钮开始扫描" FontSize="14" HorizontalAlignment="Center" Opacity="0.5" Foreground="#80FFFFFF"/>
            </StackPanel>

            <Grid x:Name="StatusOverlay" 
                  Background="#CC000000" 
                  Visibility="Collapsed"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                
                <StackPanel Orientation="Vertical" Spacing="15" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressRing IsActive="True" Width="50" Height="50" Foreground="#00FFFF"/>
                    <TextBlock x:Name="LoadingStatusText" Text="正在处理..." FontSize="16" Foreground="#00FFFF" HorizontalAlignment="Center"/>
                    
                    <ProgressBar x:Name="ScanningProgressBar" 
                                 Background="#2000FFFF" 
                                 Foreground="#00FFFF" 
                                 Height="4" 
                                 Width="200"
                                 IsIndeterminate="False"
                                 CornerRadius="2"
                                 Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Background="#60000000" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0" Padding="15,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                <TextBlock x:Name="StatusBlock" Text="STATUS: IDLE" FontSize="10" Foreground="#00FF00" VerticalAlignment="Center"/>
                <AppBarSeparator Foreground="#40FFFFFF"/>
                <TextBlock x:Name="CountBlock" Text="ITEMS: 0" FontSize="12" Opacity="0.7" Foreground="#E0FFFFFF" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="PathBlock" Grid.Column="1" 
                       Text="PATH: NULL" 
                       FontSize="12" Opacity="0.5" Foreground="#E0FFFFFF"
                       HorizontalAlignment="Right" VerticalAlignment="Center" 
                       TextTrimming="CharacterEllipsis" Margin="20,0,0,0"/>
        </Grid>
    </Grid>
</Page>
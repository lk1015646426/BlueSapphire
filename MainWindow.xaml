<Window
    x:Class="BlueSapphire.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueSapphire"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <canvas:CanvasControl x:Name="BackgroundCanvas"
                              Grid.Row="0" Grid.RowSpan="2"
                              Draw="OnDraw"
                              CreateResources="OnCreateResources"
                              IsHitTestVisible="False"
                              ClearColor="Black"/>


        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="Transparent">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock Text="BLUE SAPPHIRE" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="#80FFFFFF" 
                           CharacterSpacing="100"/>
            </StackPanel>
        </Grid>

        <NavigationView x:Name="NavView"
                        Grid.Row="1"
                        SelectionChanged="NavView_SelectionChanged"
                        PaneDisplayMode="Left"
                        IsSettingsVisible="True"
                        Background="{x:Null}" 
                        IsPaneOpen="True"
                        OpenPaneLength="160">

            <NavigationView.MenuItems>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>

        </NavigationView>
    </Grid>
</Window>
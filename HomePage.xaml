<Page
    x:Class="BlueSapphire.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <Color x:Key="CyberCyan">#00FFFF</Color>
        <Color x:Key="CyberPink">#FF0055</Color>

        <SolidColorBrush x:Key="GlassFill" Color="#D9050505"/>

        <Style x:Key="GlassCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassFill}"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="24"/>
        </Style>

        <Storyboard x:Name="EntranceStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainContent" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="MainContentTrans" Storyboard.TargetProperty="Y" From="30" To="0" Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="40,30,40,0">
            <StackPanel Orientation="Horizontal" Spacing="10" Opacity="0.6">
                <Rectangle Width="4" Height="16" Fill="#00FFFF"/>
                <TextBlock Text="终端控制台 // 核心连接已建立" FontFamily="Microsoft YaHei UI" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="MainContent" Grid.Row="1" VerticalAlignment="Center" MaxWidth="1100" Opacity="0">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="MainContentTrans"/>
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource GlassCardStyle}" BorderBrush="#5000FFFF">
                <Grid>
                    <Path Data="M0,30 L0,0 L30,0" Stroke="#00FFFF" StrokeThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Path Data="M0,30 L0,0 L30,0" Stroke="#00FFFF" StrokeThickness="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <RotateTransform Angle="180"/>
                        </Path.RenderTransform>
                    </Path>

                    <StackPanel Spacing="20">
                        <TextBlock Text="系统就绪" Foreground="#80FFFFFF" FontSize="14" CharacterSpacing="400"/>

                        <TextBlock Text="BLUE SAPPHIRE" FontSize="72" FontWeight="Black">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="#00FFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <TextBlock Text="基于 WINUI 3 的赛博朋克资源管理终端" Foreground="#00FFFF" FontSize="18" Opacity="0.7" CharacterSpacing="200"/>

                        <StackPanel Spacing="8" Margin="0,20,0,0">
                            <TextBlock Text="> 正在进行同步渲染..." Foreground="#60FFFFFF" FontSize="13"/>
                            <TextBlock Text="> 玻璃拟态界面已激活" Foreground="#60FFFFFF" FontSize="13"/>
                            <TextBlock x:Name="CursorText" Text="> 实时交互模式: 开启_" Foreground="#00FFFF" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Border x:Name="MediaCard" Style="{StaticResource GlassCardStyle}" PointerEntered="Card_PointerEntered" PointerExited="Card_PointerExited">
                    <StackPanel Spacing="15">
                        <TextBlock Text="媒体引擎负载" Foreground="White" FontWeight="Bold"/>
                        <Grid Height="8">
                            <Rectangle Fill="#20FFFFFF" RadiusX="4" RadiusY="4"/>
                            <Rectangle x:Name="MediaProgress" Fill="#FF0055" RadiusX="4" RadiusY="4" Width="100" HorizontalAlignment="Left">
                                <Rectangle.RenderTransform>
                                    <ScaleTransform x:Name="ProgressScale" ScaleX="1.5"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                        <TextBlock Text="状态: 极速模式" FontSize="12" Foreground="#80FFFFFF"/>
                    </StackPanel>
                </Border>

                <Border x:Name="CpuCard" Style="{StaticResource GlassCardStyle}" BorderBrush="#40FF0055" PointerEntered="Card_PointerEntered" PointerExited="Card_PointerExited">
                    <Grid>
                        <StackPanel Spacing="5">
                            <TextBlock Text="实时处理效率" Foreground="White" FontSize="12" Opacity="0.6"/>
                            <TextBlock Text="98.2%" FontSize="36" FontWeight="Bold" Foreground="White"/>
                            <Polyline Points="0,20 30,10 60,25 90,5 120,15 150,0" Stroke="#00FFFF" StrokeThickness="2" Opacity="0.4" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="40,0,40,30">
            <TextBlock Text="STABLE BUILD // 0.5.2" HorizontalAlignment="Right" Foreground="#20FFFFFF" FontSize="10" FontFamily="Consolas"/>
            <TextBlock Text="INTERFACE: GLASSMORPHISM 2.0" HorizontalAlignment="Left" Foreground="#20FFFFFF" FontSize="10" FontFamily="Consolas"/>
        </Grid>
    </Grid>
</Page>